<idea-plugin>
    <id>commit-template-check-plugin</id>
    <name>Git Commit Template Check</name>
    <version>1.1</version>

    <vendor email="chuchuanbao@gmail.com" />

    <description><![CDATA[
        <p>Create a commit message with the following template:</p>

        <pre>
        &lt;type&gt;(&lt;scope&gt;): &lt;subject&gt;
        &lt;BLANK LINE&gt;
        &lt;body&gt;
        &lt;BLANK LINE&gt;
        &lt;footer&gt;
        </pre>
    ]]></description>

    <idea-version since-build="145.0"/>

    <depends>com.intellij.modules.vcs</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationConfigurable groupId="appearance" groupWeight="20" id="commit.temp.check.plus"
                                 displayName="Commit Temp Check Plus Conf" instance="com.godfather1103.ui.Settings"/>
        <checkinHandlerFactory implementation="com.godfather1103.commit.CheckCommitMsgStyleFactory" order="first"/>
    </extensions>

    <actions>
        <action id="Commit.Button" class="com.leroymerlin.commit.CreateCommitAction"
                text="Create commit message"
                description="Create commit message"
                icon="PluginIcons.LOAD">
            <add-to-group group-id="Vcs.MessageActionGroup" anchor="first"/>
        </action>
    </actions>

</idea-plugin>